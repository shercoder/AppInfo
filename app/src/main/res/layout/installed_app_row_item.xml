<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/cardview_default_elevation"
    card_view:contentPadding="@dimen/padding_8dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_btn_speak_now"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="App package name"
            android:layout_toRightOf="@+id/app_icon"
            android:layout_toEndOf="@+id/app_icon"
            android:layout_alignParentTop="true"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/app_running_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Running"
            android:layout_below="@+id/app_name"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/app_disabled_label"
            android:layout_toStartOf="@+id/app_disabled_label"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/app_disabled_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disabled"
            android:layout_below="@+id/app_name"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/app_system_label"
            android:layout_toStartOf="@+id/app_system_label"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/app_system_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="System"
            android:layout_below="@+id/app_name"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>