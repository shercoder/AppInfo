<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shercoder.labs.appinfo.AppInfoDetailsActivity">

    <Button
        android:id="@+id/app_info_page_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Let's Cheat"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- package name-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/package_name_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/app_package_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/package_name_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <!-- version -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/app_package_name_value"/>

        <TextView
            android:id="@+id/app_version_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/package_name_label"
            android:layout_below="@+id/app_package_name_value"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <!-- last time used -->
        <TextView
            android:id="@+id/app_last_time_used_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last time used"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/app_version_name_value"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/app_last_time_used_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:layout_below="@+id/app_version_name_value"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Install time"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/app_last_time_used_label"/>

        <TextView
            android:id="@+id/app_first_install_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:layout_below="@+id/app_last_time_used_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <!-- Last update time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last update time"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/app_first_install_time_value"/>

        <TextView
            android:id="@+id/app_last_update_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:layout_below="@+id/app_first_install_time_value"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</LinearLayout>
